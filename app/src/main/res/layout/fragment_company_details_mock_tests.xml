<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CompanyWiseFragments.CompanyDetailsMockTestsFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/companyMockTestRecyclerView"
        android:layout_margin="5dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="There are no tests added yet"
        android:id="@+id/companyNoTestText"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="17sp"
        android:lineSpacingMultiplier="1.3"
        android:fontFamily="@font/roboto"
        android:visibility="invisible"/>

</FrameLayout>